        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Classic Dining Halls"
        android:textSize="30sp" />

    <Button
        android:id="@+id/ikenberryHall2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ikenberry Dining Hall" />

    <Button
        android:id="@+id/par2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PAR Dining Hall" />

    <Button
        android:id="@+id/buseyEvans2"
        android:layout_width="match_parent"
