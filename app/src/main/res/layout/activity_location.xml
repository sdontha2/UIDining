    <Button
        android:id="@+id/blue2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blue 41" />

    <Button
        android:id="@+id/orangeOnGreen2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Orange On Green" />

    <TextView
        android:id="@+id/aLaCarte2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="A La Carte"
        android:textSize="30sp" />

    <Button
        android:id="@+id/north2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
